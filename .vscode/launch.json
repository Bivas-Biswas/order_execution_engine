{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Vitest Tests",
      "type": "node",
      "request": "launch",
      "autoAttachChildProcesses": true,
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["--run", "--reporter", "verbose"],
      "cwd": "${workspaceFolder}",
      "smartStep": true,
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}

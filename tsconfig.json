{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "types": [
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*.ts",
        "__test__/**/*.ts"
    ]
}